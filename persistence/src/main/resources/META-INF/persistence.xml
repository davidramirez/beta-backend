<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="persistence" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.</provider>
        <shared-cache-mode>DISABLE_SELECTIVE</shared-cache-mode>

        <properties>
            <property name="hibernate.connection.driver_class" value="${db.driver}"/>
            <property name="hibernate.connection.url" value="${db.url}"/>
            <property name="hibernate.connection.username" value="${db.user}"/>
            <property name="hibernate.connection.password" value="${db.password}"/>
            <property name="hibernate.dialect" value="${db.hibernate.dialect}"/>

            <property name="hibernate.connection.provider_class" value="${db.hibernate.connection.provider_class}"/>

            <property name="hibernate.c3p0.min_size" value="${db.hibernate.c3p0.min_size}"/>
            <property name="hibernate.c3p0.max_size" value="${db.hibernate.c3p0.max_size}"/>
            <property name="hibernate.c3p0.timeout" value="${db.hibernate.c3p0.timeout}"/>
            <property name="hibernate.c3p0.max_statements" value="${db.hibernate.c3p0.max_statements}"/>
            <property name="hibernate.c3p0.idle_test_period" value="${db.hibernate.c3p0.idle_test_period}"/>

            <property name="hibernate.cache.region.factory_class"  value="${db.hibernate.cache.region.factory_class}"  />
            <property name="hibernate.cache.use_second_level_cache" value="${db.hibernate.cache.use_second_level_cache}" />
            <property name="hibernate.cache.use_query_cache" value="${db.cache.use_query_cache}" />
            <property name="hibernate.generate_statistics" value="${db.generate_statistics}" />
        </properties>
    </persistence-unit>
</persistence>